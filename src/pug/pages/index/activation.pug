section.activation
  .container
    h2.activation__title Easy Setup
    .activation__content
      picture
        source(srcset="./img/activation.webp, ./img/activation-2x.webp 2x" type="image/webp")
        img.activation-img(src="./img/activation.png", srcset="./img/activation-2x.png 2x", alt="Many Tools to Protect your Data", loading="lazy", width="391", height="231")
      ul.activation-list
        li.activation-list__item Navigate to Settings
        li.activation-list__item Select Safari, followed by Content Blockers
        li.activation-list__item Enable Solar Gate
